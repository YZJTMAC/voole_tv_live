<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/detect_dialog">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="140px"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px" />

    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="78px">

        <View 
            android:id="@+id/dialog_center_view"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/negativeButton"
           	android:layout_width="231px"
            android:layout_height="105px"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:layout_toLeftOf="@+id/dialog_center_view"
            android:textSize="36px"
            android:gravity="center"
            android:ems="6"
            android:background="@drawable/dialog_button_background_selector"
            android:textColor="@drawable/dialog_button_focus_textview_text_selector" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="231px"
            android:layout_height="105px"
            android:layout_marginLeft="35px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_center_view"
            android:textSize="36px"
            android:gravity="center"
            android:ems="6"
            android:background="@drawable/dialog_button_background_selector"
            android:textColor="@drawable/dialog_button_focus_textview_text_selector"/>
    </RelativeLayout>
</LinearLayout>
