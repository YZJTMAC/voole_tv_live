<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF000000"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" 
        android:background="#00000000">

        <View
            android:id="@+id/exit_dialog_center_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/dialog_exit_layout_sure_bt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_above="@+id/exit_dialog_center_view"
            android:layout_alignLeft="@+id/dialog_exit_layout_autostart_bt"
            android:layout_alignRight="@+id/dialog_exit_layout_autostart_bt"
            android:background="@drawable/cs_menu_textview_bg_selector"
            android:text="退出"
            android:textColor="@drawable/dialog_button_focus_textview_text_selector"
            android:textSize="30sp" />

        <Button
            android:id="@+id/dialog_exit_layout_cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/dialog_exit_layout_sure_bt"
            android:layout_alignRight="@+id/dialog_exit_layout_sure_bt"
            android:layout_below="@+id/exit_dialog_center_view"
            android:background="@drawable/cs_menu_textview_bg_selector"
            android:text="取消"
            android:textColor="@drawable/dialog_button_focus_textview_text_selector"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dialog_exit_layout_autostart_bt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/cs_menu_textview_bg_selector"
            android:textColor="@drawable/dialog_button_focus_textview_text_selector"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cs_exit_dialog_divide" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" 
        android:background="#00000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精彩推荐"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/dialog_exit_layout_ad_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>