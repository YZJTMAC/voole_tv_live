<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detect_dialog"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_error_msg"
        android:text="服务器连接测试失败"
        android:textColor="@color/light_white"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="60px"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:textSize="36px"
        android:layout_height="wrap_content"/>
	 <TextView 
        android:id="@+id/tv_error_code"
        android:text="错误代码:"
        android:textColor="@color/light_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_error_msg"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:textSize="30px"
        android:layout_height="wrap_content"/>
	 <RelativeLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:paddingTop="30dp"
	     android:gravity="center"
	     android:layout_alignParentBottom="true"
	     android:layout_marginBottom="78px"
	     android:layout_below="@id/tv_error_code">
	     <View
            android:id="@+id/dialog_center_view"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true" />
	     <Button 
	         android:id="@+id/btn_repair"
	         android:text="尝试修复"
	         android:layout_width="231px"
             android:layout_height="105px"
	         android:textColor="@color/light_white"
	         android:textSize="36px"
	         android:layout_toLeftOf="@+id/dialog_center_view"
	         android:layout_marginRight="35px"
	         android:background="@drawable/dialog_button_background_selector"/>
	      <Button 
	         android:id="@+id/btn_sure"
	         android:text="确定"
	         android:layout_width="231px"
             android:layout_height="105px"
	         android:textColor="@color/light_white"
	         android:textSize="36px"
	         android:layout_marginLeft="35px"
           	 android:layout_toRightOf="@+id/dialog_center_view"
	         android:background="@drawable/dialog_button_background_selector"/>
	 </RelativeLayout>
</RelativeLayout>
